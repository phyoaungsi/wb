<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|fill_horizontal"
    android:layout_marginBottom="3dp"
    android:background="@color/cardview_light_background"
    android:columnCount="10"
    android:rowCount="4">

    <ImageView
        android:id="@+id/item_stock_image"
        android:layout_width="129dp"
        android:layout_height="128dp"
        android:layout_column="1"
        android:layout_margin="5dp"
        android:layout_row="0"
        android:layout_rowSpan="3"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/item_title_label"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_row="0"
        android:text="TextView111111111111111111111111"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_row="1"
        android:text="TextView66666666666666666666666666666666666666666" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="2"
        android:layout_gravity="center_vertical"
        android:layout_row="2"
        android:orientation="horizontal">


        <Button
            android:id="@+id/decrease_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingBottom="25dp"
            android:text="-" />

        <TextView
            android:id="@+id/item_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            android:paddingTop="5dp"
            android:text="TextView" />

        <Button
            android:id="@+id/increase_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:text="+" />

        <FrameLayout
            android:layout_width="112dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:background="@android:drawable/screen_background_light_transparent"
                app:srcCompat="@drawable/ic_trash" />
        </FrameLayout>




    </LinearLayout>



</GridLayout>